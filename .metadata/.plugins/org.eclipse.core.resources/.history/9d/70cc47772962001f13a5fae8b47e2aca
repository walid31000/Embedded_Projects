#include "STD_TYPES.h"
#include "BIT_MATH.h"
#include "Err_Type.h"

#include "WDT_interface.h"


#include "WDT_reg.h"
#include "WDT_prv.h"


uint8 WDT_SetTime(WDT_Time_t copy_u8Time)
{
     uint8 Local_u8ErrorState=OK;
	WDTCR &=WDT_Time_Mask;

	WDTCR |=copy_u8Time;
	/*Enable WDT*/

	SET_BIT(WDTCR,WDTCR_WDE);

    return Local_u8ErrorState;

}
