#include <util/delay.h>
#include <avr/io.h>
#include "BIT_MATH.h"
#include "STD_TYPES.h"

int main(void)
{
	CLR_BIT(DDRB,1);
	SET_BIT(DDRC,0);
	SET_BIT(PORTB,1);


	while(1)
	{
	   uint8 x=GET_BIT(PIND,1);
	   if(x==0)
	    {
		  SET_BIT(PORTC,0);
	    }
	   else
		   CLR_BIT(PORTC,1);

	}
}

