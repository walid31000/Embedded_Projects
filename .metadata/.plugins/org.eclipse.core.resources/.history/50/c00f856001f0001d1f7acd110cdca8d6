#include <util/delay.h>
#include <avr/io.h>
#include "BIT_MATH.h"
#include "STD_TYPES.h"

int main(void)
{
	CLR_BIT(DDRA,1);
	SET_BIT(PORTA,1);//activate internal pull up
	DDRC=0XFF;

	uint8 SSD_ARR[10]={0b00111111,0b00000110,0b01011011,0b01001111,0b01100110,0b01101101,0b01111101,0b00000111,0b01111111,0b01101111};
    uint8 counter=0;
    PORTC=SSD_ARR[counter];
	while(1)
	{
	   uint8 x=GET_BIT(PINA,1);
	   if(x==0)
	    {
		  counter++;
		   PORTC=SSD_ARR[counter];
		 // _delay_ms(250);
	    }


	}
}

