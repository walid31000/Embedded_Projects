#include <util/delay.h>
#include <avr/io.h>
#include "BIT_MATH.h"
#include "STD_TYPES.h"

int main(void)
{
	DDRC=0xFF;

	//SET_BIT(DDRA,0);
  int i=0;
	while(1)
	{
		//for(i=0;i<8;i++)
		//{

		 //_delay_ms(500);
	     SET_BIT(PORTC,i);

          _delay_ms(500);

     	 PORTC=0xFF;
       CLR_BIT(PORTC,i);
	     _delay_ms(500);
	     i++;
	   // }
	}
}

