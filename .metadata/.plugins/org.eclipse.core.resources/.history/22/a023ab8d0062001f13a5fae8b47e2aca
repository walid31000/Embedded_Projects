 * main.c
 *watchdog timer application
 *  Created on: 24 Aug 2024
 *      Author: Oxygen
 */

#include "STD_TYPES.h"
#include "BIT_MATH.h"

#include <util/delay.h>
#include "Err_Type.h"
#include "PORT_interface.h"
#include "DIO_interface.h"


#include "WDT_reg.h"

void main(void)
{
	PORT_voidIint();
	DIO_u8SetPinValue(DIO_PORTA,DIO_PIN0,DIO_PIN_HIGH);
	_delay_ms(1000);
	DIO_u8SetPinValue(DIO_PORTA,DIO_PIN0,DIO_PIN_LOW);
	/*Set 1 sec sleep time in WDT*/
	SET_BIT(WDTCR,WDP2);
	SET_BIT(WDTCR,WDP1);
	CLR_BIT(WDTCR,WDP0);

/*Enable WDT*/
	SET_BIT(WDTCR,WDE);
/*Disable WDT*/
	WDTCR=(1<<WDTOE)|(1<<WDE);
/*Turn off watchdog*/
	WDTCR=0X00;



	while(1)
	{



	}
}
